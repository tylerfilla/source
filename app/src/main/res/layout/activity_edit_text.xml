<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Activity.Edit.Root"
    tools:context=".EditTextActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activityEditAppBar"
        style="@style/Activity.Edit.AppBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <io.microdev.source.widget.panview.PanView
        android:id="@+id/activityEditPanView"
        style="@style/Activity.Edit.PanView">

        <io.microdev.source.widget.editortext.EditorText
            android:id="@+id/activityEditEditor"
            style="@style/Activity.Edit.Editor" />

    </io.microdev.source.widget.panview.PanView>

    <LinearLayout
        android:id="@+id/activityEditQuickBar"
        style="@style/Activity.Edit.QuickBar">

    </LinearLayout>

</RelativeLayout>
