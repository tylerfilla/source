<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Activity.EditBinary.Root" parent="">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Activity.EditBinary.AppBar" parent="">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation" tools:targetApi="21">@dimen/activity_edit_binary_appbar_elevation</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Activity.EditBinary.Editor" parent="">
        <!-- Android attrs -->
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_edit_text_editor_paddingBottom</item>
        <item name="android:paddingTop">@dimen/activity_edit_text_editor_paddingTop</item>
        <item name="android:textSize">@dimen/activity_edit_text_editor_textSize</item>
        <item name="android:typeface">monospace</item>

        <!-- Custom attrs -->
        <!-- nope! -->
    </style>

    <style name="Activity.EditText.Root" parent="">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Activity.EditText.MoreOptsPopup.Root" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="Activity.EditText.MoreOptsPopup.Item" parent="">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Activity.EditText.MoreOptsPopup.Item.Text" parent="">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceSmallPopupMenu</item>
    </style>

    <style name="Activity.EditText.MoreOptsPopup.Item.Separator" parent="">
        <item name="android:background">#18000000</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Activity.EditText.AppBar" parent="">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation" tools:targetApi="21">@dimen/activity_edit_text_appbar_elevation</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Activity.EditText.PanView" parent="">
        <item name="android:background">@null</item>
        <item name="android:layout_below">@id/activityEditTextAppBar</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fillViewportHeight">true</item>
        <item name="fillViewportWidth">true</item>
    </style>

    <style name="Activity.EditText.Editor" parent="">
        <!-- Android attrs -->
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_edit_text_editor_paddingBottom</item>
        <item name="android:paddingTop">@dimen/activity_edit_text_editor_paddingTop</item>
        <item name="android:textSize">@dimen/activity_edit_text_editor_textSize</item>
        <item name="android:typeface">monospace</item>

        <!-- Custom attrs -->
        <item name="colorLineHighlight">@color/activity_edit_text_editor_colorLineHighlight</item>
        <item name="colorLineNumberColumnBg">@color/activity_edit_text_editor_colorLineNumberColumnBg</item>
        <item name="lineNumberColumnPaddingLeft">@dimen/activity_edit_text_editor_lineNumberColumnPaddingLeft</item>
        <item name="lineNumberColumnPaddingRight">@dimen/activity_edit_text_editor_lineNumberColumnPaddingRight</item>
        <item name="showLineHighlight">true</item>
        <item name="showLineNumbers">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
