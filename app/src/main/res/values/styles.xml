<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Activity.Edit.Root" parent="">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Activity.Edit.Popup.Root" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="Activity.Edit.Popup.Item" parent="">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onMoreOptsPopupItemSelected</item>
    </style>

    <style name="Activity.Edit.Popup.Item.Text" parent="">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?attr/textAppearanceSmallPopupMenu</item>
        <item name="android:tag">text</item>
    </style>

    <style name="Activity.Edit.Popup.Item.Separator" parent="">
        <item name="android:background">#18000000</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Activity.Edit.AppBar" parent="">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation" tools:targetApi="21">@dimen/activity_edit_appbar_elevation</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Activity.Edit.PanView" parent="">
        <item name="android:background">@null</item>
        <item name="android:layout_below">@id/activity_edit_app_bar</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fillViewportHeight">true</item>
        <item name="fillViewportWidth">true</item>
    </style>

    <style name="Activity.Edit.Editor" parent="">
        <!-- Android attrs -->
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">@dimen/activity_edit_editor_padding_bottom</item>
        <item name="android:paddingTop">@dimen/activity_edit_editor_padding_top</item>
        <item name="android:textSize">@dimen/activity_edit_editor_textSize</item>
        <item name="android:typeface">monospace</item>

        <!-- Custom attrs -->
        <item name="colorLineHighlight">@color/activity_edit_editor_color_line_highlight</item>
        <item name="colorLineNumberColumnBackground">@color/activity_edit_editor_color_line_number_column_background</item>
        <item name="lineNumberColumnPaddingLeft">@dimen/activity_edit_editor_line_number_column_padding_left</item>
        <item name="lineNumberColumnPaddingRight">@dimen/activity_edit_editor_line_number_column_padding_right</item>
        <item name="showLineHighlight">true</item>
        <item name="showLineNumbers">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/app_theme_color_accent</item>
        <item name="colorPrimary">@color/app_theme_color_primary</item>
        <item name="colorPrimaryDark">@color/app_theme_color_primary_dark</item>
    </style>

</resources>
