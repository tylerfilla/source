<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EditorText">

        <attr name="showLineHighlight" format="boolean" />
        <attr name="showLineNumbers" format="boolean" />

        <attr name="colorLineHighlight" format="color" />
        <attr name="colorLineNumberColumnBg" format="color" />

        <attr name="lineNumberColumnPaddingLeft" format="dimension" />
        <attr name="lineNumberColumnPaddingRight" format="dimension" />

        <attr name="enableSyntaxHighlighting" format="boolean" />

    </declare-styleable>

    <declare-styleable name="PanView">

        <attr name="fillViewportHeight" format="boolean" />
        <attr name="fillViewportWidth" format="boolean" />

        <attr name="scrollbarHorizontalEnabled" format="boolean" />
        <attr name="scrollbarVerticalEnabled" format="boolean" />

        <attr name="scrollbarHorizontalColor" format="color" />
        <attr name="scrollbarVerticalColor" format="color" />

        <attr name="scrollbarHorizontalSize" format="dimension" />
        <attr name="scrollbarVerticalSize" format="dimension" />

        <attr name="scrollbarHorizontalMargin" format="dimension" />
        <attr name="scrollbarVerticalMargin" format="dimension" />

    </declare-styleable>

</resources>
